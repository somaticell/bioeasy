<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/content_bg" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/listView1" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:layout_width="match_parent" android:layout_height="44dp" android:paddingEnd="6dp">
        <CheckBox android:textSize="14sp" android:id="@+id/cbox_encrypt" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/encrypt"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="14sp" android:id="@+id/edt_msg" android:background="@drawable/bg_white" android:layout_width="0dp" android:layout_height="44dp" android:hint="@string/connected_send_hint" android:maxLength="34" android:digits="0123456789abcdefABCDEF" android:layout_weight="1" android:paddingStart="5dp" android:paddingEnd="0dp"/>
        <Button android:textSize="14sp" android:textColor="@android:color/holo_blue_dark" android:id="@+id/btn_send" android:background="@drawable/btn_sel" android:layout_width="wrap_content" android:layout_height="44dp" android:text="@string/connected_send" android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>
