<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/outer" android:background="@drawable/shape_corner_bing_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/rootPanel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/topPanel" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_gravity="center" android:layout_width="280dp" android:layout_height="100dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
                <TextView android:textSize="@dimen/text_size_18" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/Title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_20dp" android:text="@string/untie" android:singleLine="true" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="@dimen/text_size_14" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:id="@+id/alertTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/are_you_sure" android:singleLine="true" android:layout_below="@+id/Title" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <View android:id="@+id/titleDivider" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <View android:background="#d2d3d5" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/height44">
            <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="@dimen/height44" android:layout_weight="1">
                <TextView android:textSize="@dimen/text_size_18" android:textColor="@color/gz_black" android:id="@+id/tv_ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/yes"/>
            </LinearLayout>
            <View android:background="#d2d3d5" android:visibility="visible" android:layout_width="1px" android:layout_height="@dimen/height44"/>
            <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="@dimen/height44" android:layout_weight="1">
                <TextView android:textSize="@dimen/text_size_18" android:textColor="@color/gz_black" android:id="@+id/tv_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
