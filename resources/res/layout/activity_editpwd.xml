<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/all_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/comm_toolbar" android:layout_width="match_parent" android:layout_height="@dimen/toolbar_height" layout="@layout/comm_toolbar"/>
    <RelativeLayout android:id="@+id/rl_one" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp">
        <EditText android:textSize="@dimen/text_size_14" android:textColor="@color/black_alpha_deep" android:textColorHint="@color/hint_color" android:id="@+id/et_old_pwd" android:background="@drawable/btn_corner_bg" android:paddingLeft="12dp" android:paddingRight="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/height44" android:hint="@string/edit_old_pwd" android:password="true" android:singleLine="true" android:maxLength="16" android:layout_centerHorizontal="true" android:inputType="numberPassword"/>
        <EditText android:textSize="@dimen/text_size_14" android:textColor="@color/black_alpha_deep" android:textColorHint="@color/hint_color" android:id="@+id/et_new_pwd" android:background="@drawable/btn_corner_bg" android:paddingLeft="12dp" android:paddingRight="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_10dp" android:hint="@string/edit_new_pwd" android:password="true" android:singleLine="true" android:maxLength="16" android:layout_below="@+id/et_old_pwd" android:layout_centerHorizontal="true" android:inputType="numberPassword"/>
        <EditText android:textSize="@dimen/text_size_14" android:textColor="@color/black_alpha_deep" android:textColorHint="@color/hint_color" android:id="@+id/et_agin_pwd" android:background="@drawable/btn_corner_bg" android:paddingLeft="12dp" android:paddingRight="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/height44" android:layout_marginTop="10dp" android:hint="@string/edit_agin_pwd" android:password="true" android:singleLine="true" android:maxLength="16" android:layout_below="@+id/et_new_pwd" android:inputType="numberPassword" android:layout_alignParentStart="true"/>
        <TextView android:gravity="center_vertical" android:id="@+id/tv_warn" android:paddingLeft="12dp" android:layout_width="match_parent" android:layout_height="25dp" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/edit_warn" android:layout_below="@+id/et_agin_pwd"/>
        <Button android:textSize="@dimen/text_size_14" android:textColor="@color/white" android:id="@+id/btn_change" android:background="@drawable/selector_login_btn" android:layout_width="330dp" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/edit_change_pwd" android:layout_below="@+id/tv_warn" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_two" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
        <ImageView android:id="@+id/iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/complete" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/text_size_18" android:id="@+id/tv_o" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/edit_pwd_success" android:layout_below="@+id/iv" android:layout_centerHorizontal="true"/>
        <Button android:textSize="@dimen/text_size_14" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/btn_back_main" android:background="@drawable/selector_login_btn" android:layout_width="330dp" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/pwd_success_go_main" android:layout_below="@+id/tv_o" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
