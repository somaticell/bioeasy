<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/all_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/comm_toolbar" android:layout_width="match_parent" android:layout_height="@dimen/toolbar_height" layout="@layout/comm_toolbar"/>
    <RelativeLayout android:id="@+id/rl_onepage" android:visibility="visible" android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginTop="@dimen/margin_20dp">
        <TextView android:textSize="@dimen/text_size_14" android:textColor="@color/gz_black" android:gravity="center" android:id="@+id/tv_phone" android:layout_width="330dp" android:layout_height="@dimen/height44" android:text="@string/binding_phone" android:layout_alignParentTop="true" android:layout_alignStart="@+id/btn_change_phone"/>
        <Button android:textSize="@dimen/text_size_14" android:textColor="@color/white" android:id="@+id/btn_change_phone" android:background="@drawable/selector_login_btn" android:clickable="false" android:layout_width="330dp" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_20dp" android:text="@string/change_phone" android:layout_below="@+id/tv_phone" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_twopage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_20dp">
        <RelativeLayout android:id="@+id/rl_pwd_wrap" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
            <EditText android:textSize="@dimen/text_size_14" android:textColor="@color/black_alpha_deep" android:textColorHint="@color/hint_color" android:id="@+id/edt_account" android:background="@drawable/btn_corner_bg" android:paddingLeft="12dp" android:paddingRight="8dp" android:layout_width="330dp" android:layout_height="@dimen/height44" android:hint="@string/register_phone" android:singleLine="true" android:maxLength="20" android:inputType="number"/>
            <FrameLayout android:layout_width="330dp" android:layout_height="@dimen/height44">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="@dimen/height44">
                    <Button android:textColor="@color/white" android:id="@+id/bt_code" android:background="@drawable/shape_obtain_normal" android:visibility="visible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginRight="10dp" android:text="@string/register_obtain_verification_code" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
        <EditText android:textSize="@dimen/text_size_14" android:textColor="@color/black_alpha_deep" android:textColorHint="@color/hint_color" android:id="@+id/edt_code" android:background="@drawable/btn_corner_bg" android:paddingLeft="12dp" android:paddingRight="8dp" android:layout_width="330dp" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_10dp" android:hint="@string/register_verification_code" android:singleLine="true" android:maxLength="16" android:layout_below="@+id/rl_pwd_wrap" android:layout_centerHorizontal="true" android:inputType="number"/>
        <Button android:textSize="@dimen/text_size_14" android:textColor="@color/white" android:id="@+id/btn_bind" android:background="@drawable/selector_login_btn" android:clickable="false" android:layout_width="330dp" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/start_binding" android:layout_below="@+id/edt_code" android:alpha="0.5" android:layout_alignStart="@+id/edt_code"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_threepage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp">
        <ImageView android:id="@+id/iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/complete" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/text_size_18" android:id="@+id/tv_o" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/bind_success" android:layout_below="@+id/iv" android:layout_centerHorizontal="true"/>
        <Button android:textSize="@dimen/text_size_14" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/btn_back_main" android:background="@drawable/selector_login_btn" android:layout_width="330dp" android:layout_height="@dimen/height44" android:layout_marginTop="@dimen/margin_10dp" android:text="@string/pwd_success_go_main" android:layout_below="@+id/tv_o" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
