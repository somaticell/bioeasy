<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:skin="http://schemas.android.com/android/skin" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:paddingLeft="@dimen/activity_padding" android:paddingTop="@dimen/activity_padding_10dp" android:paddingRight="@dimen/activity_padding" android:paddingBottom="@dimen/activity_padding_10dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <CheckBox android:gravity="center" android:id="@+id/id_cb_select_child" android:background="@null" android:focusable="false" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/selector_check_bg" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/id_iv_logo" android:background="@color/white" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginLeft="@dimen/margin_10dp" android:src="@drawable/product_default" android:scaleType="fitCenter" android:layout_toRightOf="@+id/id_cb_select_child"/>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/id_ll_normal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_10dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/id_iv_logo">
        <RelativeLayout android:id="@+id/goods_info" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/TextMedium" android:id="@+id/tv_goods_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/goods_name"/>
            <TextView android:textSize="@dimen/TextSmall" android:id="@+id/tv_items_child_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_5dp" android:text="@string/specification_description" android:layout_below="@+id/tv_goods_name"/>
            <TextView android:textSize="@dimen/TextMedium" android:textStyle="bold" android:textColor="@android:color/holo_red_light" android:id="@+id/id_tv_discount_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_5dp" android:text="@string/product_price" android:singleLine="true" android:layout_below="@+id/tv_items_child_desc" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/TextMedium" android:id="@+id/id_tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_5dp" android:text="@string/product_price" android:layout_toRightOf="@+id/id_tv_discount_price" android:layout_below="@+id/tv_items_child_desc" android:layout_centerVertical="true"/>
            <RelativeLayout android:gravity="right" android:id="@+id/rl_change_num" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_10dp" android:layout_toRightOf="@+id/id_tv_price" android:layout_alignBottom="@+id/id_tv_price" android:layout_alignParentRight="true">
                <Button android:id="@+id/cart_minus_btn" android:background="@drawable/cart_minus_selector" android:focusable="false" android:focusableInTouchMode="false" android:clickable="true" android:layout_width="32dp" android:layout_height="26dp"/>
                <EditText android:gravity="center" android:id="@+id/cart_count_dtxtv" android:background="@drawable/icon_cart_count" android:focusable="false" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="36dp" android:layout_height="26dp" android:text="1" android:layout_toRightOf="@+id/cart_minus_btn" android:inputType="number" style="@style/textStyle.Normal.black"/>
                <Button android:id="@+id/cart_plus_btn" android:background="@drawable/cart_plus_selector" android:focusable="false" android:focusableInTouchMode="false" android:clickable="true" android:layout_width="32dp" android:layout_height="26dp" android:layout_toRightOf="@+id/cart_count_dtxtv"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:gravity="right" android:id="@+id/id_ll_edtoring" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="64dp" android:layout_alignParentRight="true">
        <TextView android:textSize="@dimen/TextMedium" android:id="@+id/id_tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_5dp" android:text="X2" android:layout_alignParentBottom="true" android:layout_centerVertical="true"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/id_tv_goods_delete" android:background="#ff5000" android:visibility="visible" android:layout_width="40dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/margin_10dp" android:text="删除" android:layout_toRightOf="@+id/id_tv_count"/>
    </RelativeLayout>
</RelativeLayout>
