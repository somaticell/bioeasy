<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/outer" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/rootPanel" android:background="@drawable/default_builder_dialog_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/topPanel" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
                <ImageView android:id="@+id/icon" android:layout_width="32dp" android:layout_height="32dp" android:scaleType="centerInside" android:layout_centerVertical="true"/>
                <TextView android:textSize="20sp" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="center" android:id="@+id/alertTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <View android:id="@+id/titleDivider" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <TextView android:textSize="18sp" android:textColor="@android:color/darker_gray" android:gravity="center" android:id="@+id/alertMsg" android:background="@android:color/white" android:paddingLeft="16dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dialog_msg_min_height"/>
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/customPanel" android:paddingLeft="@dimen/text_size_16" android:paddingRight="@dimen/text_size_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
            <Button android:textColor="@android:color/white" android:gravity="center" android:id="@+id/dialog_btn_n" android:background="@drawable/default_builder_dialog_btn_bg" android:visibility="gone" android:layout_width="0dp" android:layout_height="36dp" android:layout_margin="8dp" android:maxHeight="48dp" android:layout_weight="1"/>
            <Button android:textColor="@android:color/white" android:gravity="center" android:id="@+id/dialog_btn_p" android:background="@drawable/default_builder_dialog_btn_bg" android:visibility="gone" android:layout_width="0dp" android:layout_height="36dp" android:layout_margin="8dp" android:maxHeight="48dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
