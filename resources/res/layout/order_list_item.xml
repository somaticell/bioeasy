<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/all_bg" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/activity_padding" android:paddingTop="@dimen/activity_padding" android:paddingRight="@dimen/activity_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_10dp">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:background="@color/bg_view" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/TextSmall" android:textColor="@color/gray" android:id="@+id/tv_order_sn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp" android:layout_marginBottom="@dimen/margin_10dp" android:text="@string/order_number_one"/>
            <TextView android:textSize="@dimen/TextSmall" android:textColor="@color/gz_black" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tv_order_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10dp" android:layout_marginBottom="@dimen/margin_10dp" android:text="@string/pending_payment"/>
        </LinearLayout>
        <View style="@style/separator_line"/>
        <HorizontalScrollView android:layout_gravity="center_vertical" android:id="@+id/order_product_scrollv" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="96dp">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/product_list_gallery_lyaout" android:background="@color/bg_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </HorizontalScrollView>
        <RelativeLayout android:orientation="vertical" android:id="@+id/order_product_rlayout" android:background="@drawable/view_bg_clickable_selector" android:paddingTop="@dimen/activity_padding" android:paddingBottom="@dimen/activity_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/order_pic_imgv" android:background="@color/white" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/product_default" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerInParent="true"/>
            <TextView android:textSize="@dimen/TextMedium" android:id="@+id/order_product_name_txtv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_10dp" android:layout_marginTop="@dimen/margin_5dp" android:text="针织衫" android:layout_toRightOf="@+id/order_pic_imgv" style="@style/textStyle.Normal.black"/>
            <TextView android:textSize="@dimen/TextSmall" android:id="@+id/product_spec_txtv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_10dp" android:layout_marginTop="@dimen/margin_5dp" android:text="产品规格" android:layout_toRightOf="@+id/order_pic_imgv" android:layout_below="@+id/order_product_name_txtv"/>
            <TextView android:textSize="@dimen/TextMedium" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/product_price_txtv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_10dp" android:layout_marginTop="@dimen/margin_5dp" android:text="¥999" android:layout_toRightOf="@+id/order_pic_imgv" android:layout_below="@+id/product_spec_txtv" style="@style/textStyle.Normal.black"/>
            <TextView android:textSize="@dimen/TextMedium" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/product_count_txtv" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="x1" android:layout_toRightOf="@+id/product_price_txtv" android:layout_below="@+id/product_spec_txtv" style="@style/textStyle.Normal.black"/>
        </RelativeLayout>
        <View style="@style/separator_line"/>
        <TextView android:textSize="@dimen/TextSmall" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/order_product_detail_txtv" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/margin_10dp" android:layout_marginBottom="@dimen/margin_10dp" android:text="共1件商品 实付金额¥699"/>
        <View style="@style/separator_line"/>
        <HorizontalScrollView android:layout_gravity="center_vertical" android:id="@+id/order_button_scrollv" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginTop="@dimen/margin_5dp" android:layout_marginBottom="@dimen/margin_5dp" android:fillViewport="true">
            <LinearLayout android:gravity="right" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/order_button_gallery_lyaout" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
