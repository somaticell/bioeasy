<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/lay_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:layout_marginBottom="12dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_folder" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/ic_default_image" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_18" android:textColor="#111111" android:ellipsize="end" android:id="@+id/tv_folder_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="12dp" android:maxLines="1"/>
        <TextView android:textSize="12sp" android:textColor="#afafaf" android:id="@+id/tv_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
    <View android:background="#dadada" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="16dp" android:layout_alignParentBottom="true"/>
</LinearLayout>
